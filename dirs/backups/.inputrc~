#want vi to be the default editor for readline                      
set editing-mode vi                                            

# vi settings                                         
$if mode=vi                
    # normal mode                           
    set keymap vi-command                                 
    "j": history-search-forward 
    "h": backward-char
    "l": forward-char         
    "G": end-of-history
    # insert mode             
    set keymap vi-insert                          
    "jj": vi-movement-mode # remap escape   
    "h": self-insert
    "l": self-insert       
    "G": self-insert
    "j": self-insert
$endif 
